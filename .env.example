# ==========================================
# CONFIGURATION API
# ==========================================

# URL de base de l'API Spring Boot
VITE_API_BASE_URL=https://blog-rptw.onrender.com/api

# Nom de l'application
VITE_APP_NAME=Blog App

# Version de l'application
VITE_APP_VERSION=1.0.0

# ==========================================
# CONFIGURATION JWT
# ==========================================

# Durée de vie du token en millisecondes (par défaut: 24h)
VITE_JWT_EXPIRATION=86400000

# Clé pour le stockage local du token
VITE_TOKEN_STORAGE_KEY=authToken

# Clé pour le stockage local des infos utilisateur
VITE_USER_STORAGE_KEY=user

# ==========================================
# CONFIGURATION PAGINATION
# ==========================================

# Nombre d'éléments par page par défaut
VITE_DEFAULT_PAGE_SIZE=10

# Nombre maximum d'éléments par page
VITE_MAX_PAGE_SIZE=100

# ==========================================
# CONFIGURATION UI
# ==========================================

# Thème par défaut (light/dark)
VITE_DEFAULT_THEME=light

# Langue par défaut
VITE_DEFAULT_LANGUAGE=fr

# ==========================================
# CONFIGURATION DE DÉVELOPPEMENT
# ==========================================

# Activer les logs de développement
VITE_ENABLE_DEV_LOGS=true

# Activer le mode debug
VITE_DEBUG_MODE=true

# URL du serveur de développement frontend
VITE_DEV_SERVER_URL=http://localhost:5173

# ==========================================
# CONFIGURATION SWAGGER/OPENAPI
# ==========================================

# URL de la documentation Swagger
VITE_SWAGGER_URL=https://blog-rptw.onrender.com/api/swagger-ui.html

# ==========================================
# CONFIGURATION CORS
# ==========================================

# Origines autorisées pour CORS (pour information, géré côté backend)
# ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==========================================
# VARIABLES OPTIONNELLES
# ==========================================

# URL de l'API en production (si différente)
# VITE_API_PROD_URL=https://your-api-domain.com/api

# Clé Google Analytics (si utilisé)
# VITE_GA_TRACKING_ID=GA_MEASUREMENT_ID

# Configuration Firebase (si utilisé)
# VITE_FIREBASE_API_KEY=your-firebase-api-key
# VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id

# ==========================================
# NOTES D'UTILISATION
# ==========================================

# 1. Copiez ce fichier vers '.env' pour l'utiliser
# 2. Les variables commençant par VITE_ sont accessibles côté client
# 3. Ne jamais commiter le fichier .env avec des données sensibles
# 4. Utilisez .env.local pour les variables d'environnement locales
# 5. Les variables peuvent être surchargées selon l'environnement :
#    - .env.local (toujours ignoré par git)
#    - .env.development (environnement de développement)
#    - .env.production (environnement de production)
